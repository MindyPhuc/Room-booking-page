<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="styles/styles.css">    
    
    <title>WEB322 Assignment</title>
  </head>
  <body>

        {{> header}}
        
        <!-- Heading -->
        <div class="col-12 text-center mt-5">
            <div class="text-dark pt-2"><a href="/add-photo" class="btn btn-custom">Upload a photo</a></div>
            <div class="border-top border-primary w-25 mx-auto my-3"></div>            
        </div>

        <div class="container">
            {{#if hasPhotos }} {{#each photos}}
            <div class="col-md-4 py-4">
                <div class="card h-100">
                    <a href="#">
                        <img src="./photos/{{fileName}}" alt={{caption}} class="card-img-top">
                    </a>
                    <div class="card-body">
                        <h4 class="card-title">{{caption}}</h4>
                        <p class="card-text">Uploaded: {{uploadDate}}</p>                        
                        <div class="remove" title="Remove photo">
                            <form action="/remove-photo/{{filename}}" method="post">
                            <button type="submit">
                                <img src="images/trash_can.jpg"/>
                            </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}} {{else}}
            <p>
            You have no photos uploaded yet
            </p>
            {{/if}}
        </div>
        
        {{> footer}}
        
        <!-- jQuery, Popper.js, Bootstrap JS, Font Awesome JS -->
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
        <script src="https://kit.fontawesome.com/a076d05399.js"></script>
    </body>
</html>
