<!doctype html>
<html lang="en">
  {{> head}}
  <body>

        {{> header user}}        
        <div class="sign-up-bg">
            <div class="container p-4 w-50 my-5 bg-form">                           
                
                <h3 class="text-center py-3 form-header-custom">ADDING A PHOTO</h3>
                <p>Room ID: {{roomID}}</p>                              
                <form class="needs-validation" action="/{{roomID}}/photos/Add" method="POST" novalidate enctype="multipart/form-data">                         
                    <div class="form-group row">
                        <label for="photo"class="col-sm-2 col-form-label">Photo</label>
                        <div class="col-sm-10">
                            <input id="photo" name="photo" type="file" required>
                        </div>   
                    </div>
                    
                    <div class="form-group">
                        <div class="button">
                            <button type="submit" class="btn btn-custom w-100" tabindex="8">Submit</button>
                        </div>
                    </div>                        
                </form>                 
            </div>
        </div>


        
        {{> footer}}        
        {{> script}}
    </body>
</html>
