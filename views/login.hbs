<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="styles/styles.css">

    <!-- Form validation -->
    <script src="scripts/script.js"></script>
    
    <title>WEB322 Assignment</title>
  </head>
  <body>

      {{> header}}

        <!-- Form -->
        <div class="login-bg">
            <div class="container p-4 w-50 my-5 bg-form">                
                <h3 class="text-center py-3 form-header-custom">LOGIN</h3>                    
                <form class="needs-validation" action="/login" method="POST" enctype="multipart/form-data" novalidate>
                    <div class="form-group">
                        <input id="username" name="username" type="text" class="form-control" placeholder="Username" tabindex="1" autofocus required>
                        <div class="invalid-feedback">Please enter username</div>
                    </div>
                    <div class="form-group">
                       <input id="password" name="password" type="password" class="form-control" placeholder="Password" tabindex="2" required>
                       <div class="invalid-feedback">Please enter password</div>
                   </div>                        
                   <div class="button">
                       <button type="submit" class="btn btn-custom w-100 " tabindex="3">Login</button>
                   </div>
                </form>                 
            </div>
        </div>
      
      {{> footer}}
      
        <!-- jQuery, Popper.js, Bootstrap JS, Font Awesome JS -->
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
        <script src="https://kit.fontawesome.com/a076d05399.js"></script>
    </body>
</html>
