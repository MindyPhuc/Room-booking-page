<!doctype html>
<html lang="en">
  
   {{> head}}
  <body>

      {{> header}}

        <!-- Form -->
        <div class="login-bg">
            <div class="container p-4 w-50 my-5 bg-form">                      
                <h3 class="text-center py-3 form-header-custom">Please login below</h3>
                {{#if errorMsg}}
                    <h5>{{errorMsg}}</h5>
                {{/if}}                    
                <form class="needs-validation" action="/login" method="POST" novalidate>
                    <div class="form-group">
                        <input id="username" name="username" type="text" class="form-control" placeholder="Username" tabindex="1" autofocus required>
                        <div class="invalid-feedback">Please enter username</div>
                    </div>
                    <div class="form-group">
                       <input id="password" name="password" type="password" class="form-control" placeholder="Password" tabindex="2" required>
                       <div class="invalid-feedback">Please enter password</div>
                   </div>                        
                   <div class="button">
                       <button type="submit" class="btn btn-custom w-100 " tabindex="3">Login</button>
                   </div>
                </form>                 
            </div>
        </div>
      
      {{> footer}}
      {{> script}}
    </body>
</html>
